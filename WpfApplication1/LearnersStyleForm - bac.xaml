<Window x:Class="WpfApplication1.LearnersStyleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LearnersStyleForm"  WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Background="#FF1850C7">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF3348AA"/>
                <GradientStop Color="#FFBCC6F5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer HorizontalAlignment="Stretch" Width="auto" Height="400" Margin="10,100,0,10" VerticalAlignment="Top">
                <StackPanel>
                    <GroupBox x:Name="grpx1"  HorizontalAlignment="Center" Margin="3,10,0,0" VerticalAlignment="Top" Height="147" Width="auto" BorderThickness="0">
                        <Grid Margin="3,0,3,-23">
