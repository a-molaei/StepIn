        <GroupBox x:Name="grpx3" Background="#FFD8D8D8" Visibility="Hidden" Opacity="0" HorizontalAlignment="Center"   VerticalAlignment="Center" Height="188" Width="auto" BorderThickness="2" BorderBrush="#FF064164" Padding="7" Header="Question 2">
